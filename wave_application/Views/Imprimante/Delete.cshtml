@model wave_application.Models.Imprimante

@{
    ViewData["Title"] = "Delete";
}

<h1>Êtes-vous sûr de vouloir supprimer ceci ?</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomPc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomPc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomImprimante)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomImprimante)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-primary">Retour</a> |
        <input type="submit" value="Supprimer" class="btn btn-danger" />
    </form>
</div>
