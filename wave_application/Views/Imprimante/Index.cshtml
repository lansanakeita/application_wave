@model IEnumerable<wave_application.Models.Imprimante>

@{
    ViewData["Title"] = "Index";
}

<h1>Liste des Ordinateurs avec l'imprimantes associées </h1>

<p>
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Retour</a>
    <a class="btn btn-primary" asp-action="Create">Nouveau</a>
</p>
<table class="table table-bordered table-striped">
    <thead class="text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomPc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomImprimante)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody class="text-center">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomPc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomImprimante)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Modifier</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
