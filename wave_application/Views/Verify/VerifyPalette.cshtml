@model wave_application.Models.Injection

@{
    ViewData["Title"] = "Vérification 24H";
}

<h1>Vérifier la disponibilité de la palette</h1>
<hr />

<div class="row" id="formulaireS">
    <div class="col-md-6">
        @using (Html.BeginForm("VerifyPalette", "Verify", FormMethod.Post))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" id="verify">
                <label asp-for="Of" class="control-label">Code-barres Carton</label>
                <input class="form-control" id="of24H" name="of24H" required />
                <span asp-validation-for="Of" class="text-danger"></span>
            </div>

            <div id="buttonForm">
                <a href="/" class="btn btn-primary">Retour</a>
                <button type="submit" name="action" value="Valider" class="btn btn-primary">Vérification</button>
                <button type="submit" name="action" value="Mise_en_prod" class="btn btn-primary">Production</button>
            </div>

            <div id="loadingIndicator" style="display: none;">
                <i class="fa fa-spinner fa-spin"></i> Traitement en cours...
            </div>
        }
    </div>
</div>


@section Scripts {
    <script>
       
    </script>
}