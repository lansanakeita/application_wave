@model wave_application.Models.Tremie

<!-- Modal -->
<div class="modal fade" id="Edit-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Modification d'une trémie</h3>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group"> 
                        <input type="hidden" asp-for="Id" />
                        <label asp-for="NumeroTremie" class="control-label"></label>
                        <input asp-for="NumeroTremie" class="form-control" id="numTremie" disabled/>
                        <input class="form-control" hidden id="numTremie" value="@Model.NumeroTremie" name="numero"/>
                        <span asp-validation-for="NumeroTremie" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="OfComposant" class="control-label">N° OF Composant / N° Lot pour externe</label>
                        <input class="form-control" required name="Of/Lot" autocomplete="off" value="@Model.OfComposant" />
                        <input class="form-control" hidden value="@Model.OfComposant" name="composantOf" />
                        <span asp-validation-for="OfComposant" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="OfAssemblage" class="control-label"></label>
                        <input asp-for="OfAssemblage" class="form-control" required autocomplete="off" />
                        <input class="form-control" hidden value="@Model.OfAssemblage" name="assemblageOf" />
                        <span asp-validation-for="OfAssemblage" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ArticleAssemblage" class="control-label"></label>
                        <input asp-for="ArticleAssemblage" class="form-control" required autocomplete="off" />
                        <input class="form-control" hidden value="@Model.ArticleAssemblage" name="assemblageArticle" />
                        <span asp-validation-for="ArticleAssemblage" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Operateur" class="control-label"></label>
                        <input asp-for="Operateur" class="form-control" required value="" autocomplete="off" />
                        <input class="form-control" hidden value="@Model.Operateur" name="operator" /> 
                        <span asp-validation-for="Operateur" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check">
                        <label class="form-check-label" id="externe">
                            <input class="form-check-input" asp-for="Externe" name="externe" /> Composant Externe ?
                        </label>

                        <label class="form-check-label" hidden id="externe">
                            <input class="form-check-input" hidden value="@Model.Externe" name="composantExterne" />
                        </label>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                        <input type="submit" value="Valider" class="btn btn-primary" />
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
