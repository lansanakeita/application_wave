@model wave_application.Models.Tremie

<!-- Modal -->
<div class="modal fade" id="OFSuivant" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="externe">Le remplacement sera sur toutes les trémies</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form asp-action="OFSuivant" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
                    <div class="form-group">
                        <label asp-for="OfAssemblage" class="control-label"></label>
                        <input asp-for="OfAssemblage" class="form-control" required />
                        <span asp-validation-for="OfAssemblage" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Operateur" class="control-label"></label>
                        <input asp-for="Operateur" class="form-control" required />
                        <span asp-validation-for="Operateur" class="text-danger"></span>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                        <input type="submit" value="Valider" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 






